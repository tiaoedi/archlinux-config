#Keyboard dependent
#alacritty
super + KP_Enter
	alacritty
#volume+
super + a
   amixer -D pulse set Master 10%+

#volume-
super + s
  amixer -D pulse set Master 10%-

#volume multe
super + n
   amixer -D pulse set Master 1+ toggle

  
#################################################################
# SUPER + SHIFT KEYS
#################################################################

#File-Manager
super + shift + Return
	thunar

#Keyboard dependent
#File-Manager
super + shift + KP_Enter
	thunar

#dmenu
super + shift + d
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=14'

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd


