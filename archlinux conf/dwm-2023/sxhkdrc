#################################################################
# SUPER + FUNCTION KEYS
#################################################################

# Vivaldi
super + F1
	firefox

# Atom
super + F2
	google-chrome-stable  

#Inkscape
super + F3
    inkscape

#Gimp
super + F4
    gimp

#Meld
super + F5
    hypnotix

#Vlc
super + F6
    vlc --video-on-top

#Virtualbox
super + F7
    virtualbox

#Thunar
super + F8
    thunar

#Evolution
super + F9
    alacritty -e ~/.config/dwm/scripts/app.sh 

#Spotify
super + F10
    spotify adblock

#Rofi Fullscreen
super + F11
    rofi -theme launcher2.rasi -show drun -show-icons -lines 6 -columns 4

#Rofi
super + F12
    rofi -show drun -show-icons

