#Minhas personalisações
exec --no-startup-id numlockx on
exec --no-startup-id com.dropbox.Client
exec --no-startup-id nitrogen --restore


#Firefox
bindsym $mod+F1 exec firefox


#Google Chrome
bindsym $mod+F2 exec google-chrome-stable

#Brave
bindsym $mod+F3 exec brave

#Nautilus
bindsym $mod+F4 exec nautilus

#Shutdown
bindsym $mod+Shift+X exec shutdown now

#Reboot
bindsym $mod+Shift+H exec reboot

